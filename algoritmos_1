//Algoritmos e estrutura de dados III, o basico do basico
//Algoritmos sao capazes de realizar tarefas como: 
//Ler e escrever dados 
//Avaliar expressoes algebricas, relacionais e logicas
//Tomar decisoes com base nos resultados das expressoes avaliadas
//Repetir um conjunto de acordo com uma condição 

#include <iostream>
using namespace std;
int main (){
    //precisao
    double numero1, numero2;
    
    //entrada
    cout << "Digite o primeiro número: ";
    cin >> numero1;
    cout << "Digite o segundo número: ";
    cin >> numero2;
    
    //saída/eficácia
    double soma = numero1 + numero2;
    cout << "A soma de " << numero1 << " e " << numero2 << " é: " << soma << endl;
    
    //finitude 
    return 0;
}
